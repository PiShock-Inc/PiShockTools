@using System.ComponentModel.DataAnnotations
<MudDialog RenderMode="ModalRenderMode.LazyReload" Animated="true">
        <TitleContent>
            <MudText Size="HeadingSize.Is4">
                Log in to get started
            <MudButton Color="Color.Error" OnClick="Close">Close</MudButton>
            </MudText>
            
        </TitleContent>
        <DialogContent>
            
        </DialogContent>
        <DialogActions>
        </DialogActions>
</MudDialog>
<script>
    window.addEventListener("message", (event) => {
        if (event.origin === 'https://pishock.com') {
            DotNet.invokeMethodAsync('StreamTools', 'ReceiveMessage', event.data);
        }
    })
</script>