@using System.ComponentModel.DataAnnotations
<MudDialog RenderMode="ModalRenderMode.LazyReload" Animated="true">
        <TitleContent>
            <MudText Size="HeadingSize.Is4">
                Log in to get started
            <MudButton Color="Color.Error" OnClick="Close">Close</MudButton>
            </MudText>
            
        </TitleContent>
        <DialogContent>
            <MudForm>
                <MudTextField T="string" Label="Email" Required="true" RequiredError="Email is required" Validation="@(new EmailAddressAttribute() {ErrorMessage="Invalid Email address"})" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Mail" @bind-Text="@email" />
                <MudTextField T="string" Label="Password" Required="true" RequiredError="Password is required" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Password" @bind-Text="@password" />
            </MudForm>
        </DialogContent>
        <DialogActions>
            <MudButton Type="ButtonType.Submit" Color="Color.Primary" Shadow="Shadow.Default" EndIcon="@Icons.Material.Filled.LockOpen">
                Login
            </MudButton>
        </DialogActions>
</MudDialog>