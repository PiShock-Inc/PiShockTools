@inherits LayoutComponentBase
@layout RootLayout
<MudLayout>
    <MudAppBar>
        <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.Menu" OnClick="ToggleDrawer" />
        <MudSpacer />
        <MudButton Color="Color.Success" EndIcon="@Icons.Material.Filled.LockOpen" OnClick="OpenLoginModalAsync">Login</MudButton>
    </MudAppBar> 
    <MudDrawer @bind-Open="open" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
